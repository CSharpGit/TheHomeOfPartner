<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 创友之家后台管理</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("创友之家", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("用户管理", "Index", "UserManage", new { area = "Admin" }, new { @class = "active" })</li>
                    <li>@Html.ActionLink("项目管理", "Index", "ProjectManage", new { area = "Admin" }, new { @class = "active" })</li>
                    <li>@Html.ActionLink("聊天记录管理", "Index", "ChatLogManage", new { area = "Admin" }, new { @class = "active" })</li>
                    <li>@Html.ActionLink("论坛话题管理", "Index", "TopicManage", new { area = "Admin" }, new { @class = "active" })</li>
                    <li>@Html.ActionLink("论坛评论管理", "Index", "ReplyManage", new { area = "Admin" }, new { @class = "active" })</li>
                    <li>@Html.ActionLink("开发团队管理", "Index", "TeamManage", new { area = "Admin" }, new { @class = "active" })</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 创友之家后台管理</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>