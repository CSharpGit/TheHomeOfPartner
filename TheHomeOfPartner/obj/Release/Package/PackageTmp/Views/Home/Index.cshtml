@model IEnumerable<TheHomeOfPartner.Models.ReachAgreement>
@{
    if (Session["UserName"] != null)
    {
        Layout = "~/Views/Shared/_Layout2.cshtml";
    }
    /**/
    ViewBag.Title = "主页";
}

@section ScriptsHeader{
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryonepage")
    @Styles.Render("~/Content/css-home")
    <script src="~/Scripts/jquery.easy_slides.js"></script>
    <script src="~/Scripts/script.js"></script>
}
<div class="main">
    <section class="page1">
        <div class="page_container">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                    <li data-target="#myCarousel" data-slide-to="3"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/Images/banner/banner0.jpeg" alt="First slide">
                        <div class="carousel-caption" id="item1">
                            <h1>我们这里有</h1>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Images/banner/banner1.jpeg" alt="Second slide">
                        <div class="carousel-caption" id="item2">
                            <h1>一流的开发人员</h1>
                            <p>
                                创友之家，聚集了技术一流的开发人员，为广大客户提供技术支持，不管您需要开发什么样的项目，总有一流的开发人员会满足您的需求。来到创友之家，您将可以与技术一流的开发人员面对面交谈，如果您有什么技术疑惑，您可以在论坛中发布话题，开发人员们将给您答疑解惑，当然，您也可以参与其他相关话题谈论。
                            </p>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Images/banner/banner2.jpeg" alt="Third slide">
                        <div class="carousel-caption" id="item3">
                            <h1>广大的客户群体</h1>
                            <p>
                                如果您是一个项目提供者，您将作为我们的最大客户，您可以在平台上轻松发布您的项目需求，您发布的项目将很快有技术一流的开发人员预览，如果您保持在线，开发人员将主动与您商谈项目细节，以便快速完成项目开发工作。
                            </p>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Images/banner/banner3.jpeg" alt="Forth slide">
                        <div class="carousel-caption" id="item4">
                            <h1>和谐的团队文化</h1>
                            <p>
                                如果您是一名技术一流的开发人员，您可能还是有疑惑，有时候需要开发一个较大型项目，一个人的能力即使再强，也没有那么高的效率。那么您可能缺少志同道合的队友。来到创友之家，如果您与客户谈好项目，您将可以创建团队，发布您的技术要求，让志同道合的开发人员跟您一起组队开发，快速完成项目！
                            </p>
                        </div>
                    </div>
                </div>

                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <!-- <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> -->
                    <span class="sr-only">上一个</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <!-- <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span> -->
                    <span class="sr-only">下一个</span>
                </a>
            </div>
        </div>
    </section>
    <section class="page2">
        <div class="page_container">
            <h1>优秀的项目</h1>
            <div class="slider slider_four_in_line">
                @foreach (var item in Model)
                {
                    <div class="thumbnail">
                        <img src=@item.ProjectPictureURL height="200" width="242" alt=@item.Project.PName>
                        <div class="caption">
                            <h3>@item.Project.PName</h3>
                            <p>@item.Project.ProjectRequirement.Substring(0, 16)......</p>
                            <p>
                                <a href="../ProjectDisplay/Index?id=@item.Id" class="btn btn-primary" role="button">查看详情</a>
                            </p>
                        </div>
                    </div>
                }
                <div class="next_button"></div>
                <div class="prev_button"></div>
            </div>



        </div>
    </section>
    <section class="page3">
        <div class="page_container">
            <h1>项目接单</h1>
            <h3>一个好的项目需要的好的人来完成，团队接项目可用</h3>
            <div class="row">
                <div class="container-fluid">
                    @foreach (var item in ViewBag.ProjectModel)
                    {
                        <div class="col-md-4 col-sm-12">
                            <div class="thumbnail">
                                <img src="~/Images/cyzj.png" alt="项目截图">
                                <div class="caption">
                                    <h3>@item.PName</h3>
                                    <ul>
                                        <li>
                                            <b>项目类型：</b>@item.ProjectType
                                        </li>
                                        <li>
                                            <b>开发语言：</b>@item.DevelopLanguage
                                        </li>
                                        <li>
                                            <b>项目定价：</b>@item.Price
                                        </li>
                                        <li>
                                            <b>发布日期：</b>@item.ReleaseDate
                                        </li>
                                    </ul>
                                    <p>
                                        <a href="../Chat/Index?id=@item.Id" class="btn btn-primary" role="button">查看详情</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div id="button">
                <p>
                    <a href="../ProjectBrowsing/Index" class="btn btn-primary" role="button">查看更多</a>
                </p>
            </div>
        </div>
    </section>
    <section class="page4">
        <div class="page_container">
            <h1>团队招募</h1>
            <ul class="cd-items cd-container">
                @foreach (var item in ViewBag.RecruitModel)
                {
                    <li class="cd-item">
                        <img src="~/Images/join.jpg" class="img-responsive img-rounded" alt="@item.TeamName">
                        <a href="../Recruit/Index" class="cd-trigger">@item.TeamName</a>
                    </li>
                }
            </ul> <!-- cd-items -->
        </div>
    </section>
    <section class="page5">
        <div class="page_container">
            <div class="row clearfix">
                <h1>创友动态</h1>
                <div class="col-md-4">
                    <span>关于我们</span>
                    <ol>
                        <li>北京白鹭是全球最大的HTML5一站式移动技术和服务提供商，致力于为移动互联网全行业提供技术解决方案与服务。截止2017年1月份，白鹭引擎创建的内容占据全行业70%份额，H5游戏全渠道累计排名Top 30，白鹭引擎产品占57%，月流水超过100万的H5游戏，全部由白鹭引擎创建，超过3700款App，采用白鹭H5+原生打包解决方案。</li>
                    </ol>
                </div>
                <div class="col-md-4">
                    <span>媒体报道</span>
                    <ol>
                        <li><a href="" target="_blank">《炉石传说》游戏总监Ben Brode将离开暴雪，自行创业</a></li>
                        <li><a href="" target="_blank">WeGame开启Kiei主题周末，饥荒限时免费</a></li>
                        <li><a href="" target="_blank">《绝地求生》平衡性调整将至，三级头只会出现在空投</a></li>
                        <li><a href="" target="_blank">《巫师》电视剧首季将分8集，2020年之前不会推出</a></li>
                        <li><a href="" target="_blank">《荒野行动》新版本体验：新图、新枪、新功能</a></li>
                        <li><a href="" target="_blank">曝光 | 魅族 15 Plus还没发布先出评测</a></li>
                        <li><a href="" target="_blank">扯淡 | 所有买电脑的都应该懂得捡垃圾</a></li>
                    </ol>
                </div>
                <div class="col-md-4">
                    <span>合作伙伴</span>
                    <br>
                    <img src="~/Images/banner/logo.png" alt="合作伙伴" class="B_cooperation">
                </div>
                <div class="clearfix"></div>
            </div>
            <footer>
                <ul class="footer-qr">
                    <li><img src="~/Images/footer/weibo.jpg" alt=""><p>微信公众号</p></li>
                    <li>
                        <img src="~/Images/footer/weibo.jpg" alt="">
                        <p>官方微博</p>
                    </li>
                    <li>
                        <img src="~/Images/footer/weichat.jpg" alt="">
                        <p>创友团队</p>
                    </li>
                </ul>
                <ul class="footerMenu">
                    <li class="active">@Html.ActionLink("主页", "Index", "Home")</li>
                    <li>@Html.ActionLink("论坛", "Index", "Forum")</li>
                    <li>@Html.ActionLink("项目浏览", "Index", "ProjectDisplay")</li>
                    <li>@Html.ActionLink("团队招募", "Index", "Recruit")</li>
                    <li>@Html.ActionLink("项目接单", "Index", "ProjectBrowsing")</li>
                    <li>@Html.ActionLink("关于我们", "About", "Home")</li>
                </ul>
                <p>Copyright@2017-2018 chuangyouzhijia</p>
                <br>
                创友之家开发者QQ群:
                <span style="color: #b5b5b5;">559824238、474862529</span>
                、2015478562（满）、2545869654（满）、8865945721（满）
                <br>
                商务合作：<a href="">bd@dalkfdj.com</a>
            </footer>
        </div>
    </section>
</div>
@section ScriptsFooter{
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery.easy_slides.js"></script>
    <script src="~/Scripts/velocity.min.js"></script>
    <script src="~/Scripts/main.js"></script>
    <script type="text/javascript">
        $(".main").onepage_scroll({
            sectionContainer: "section",
            easing: "cubic-bezier(0.175, 0.885, 0.420, 1.310)"
        });
        $(document).ready(function () {
            $('.slider_circle_10').EasySlides({
                'autoplay': true,
                'show': 13
            })
            $('.slider_four_in_line').EasySlides({
                'autoplay': true,
                'show': 9
            })
            $('.slider_clock').EasySlides({
                'autoplay': true,
                'stepbystep': false,
                'show': 15
            })
        });
    </script>
}