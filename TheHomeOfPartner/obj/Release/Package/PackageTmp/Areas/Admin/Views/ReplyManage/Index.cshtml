@model IEnumerable<TheHomeOfPartner.Models.Reply>

@{
    ViewBag.Title = "评论管理";
}

<h2>评论管理</h2>

<p>
    @Html.ActionLink("添加评论", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Topic.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.UserLabel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Approval)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReplyDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Topic.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.UserLabel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReContent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Approval)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReplyDate)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id=item.Id }) |
            @Html.ActionLink("详情", "Details", new { id=item.Id }) |
            @Html.ActionLink("删除", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
